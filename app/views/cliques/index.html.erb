<div class="container">

<h1>Cliques</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cliques.each do |clique| %>
      <tr>
        <td><%= clique.name %></td>
        <td><%= link_to 'Join', join_clique_cliques_path(user_id: current_user.id, clique_id: clique.id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Make a new clique', new_clique_path, class: "btn btn-primary" %>

</div>