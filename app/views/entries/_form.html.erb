
  <%= form_for (@entry) do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "Add your answer!", rows: 5, class: "form-control" %>
    </div>
    
    <%= f.hidden_field :page_id, :value => @page.id%>
    <%= f.hidden_field :user_id, :value => current_user.id%>

    <div class="form-group" id="anonymous-checkbox">
      <%= f.label :anonymous, "Check if you want to post anonymously" %>
      <%= f.check_box :anonymous, class: "margin-left" %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>