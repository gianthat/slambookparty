<!DOCTYPE html>
<html>
<head>
  <title>Slambook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Knewave|Waiting+for+the+Sunrise|Gloria+Hallelujah|Indie+Flower' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>  
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>-page">
	<header>
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<% if current_user %>
			<div class="container">
				<div id="nav-brand" class="navbar-text navbar-left">
					<%= link_to "Slambook", homeroom_user_path(current_user) %>
				</div>

				<div class="dropdown navbar-right navbar-text">
				   <a class="dropdown-toggle brand-font" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
				      <%=current_user.first_name%><span class="glyphicon glyphicon-cog"></span>
				    </a>
				  <ul class="dropdown-menu" role="menu">
				    <li><%= link_to "Homeroom", homeroom_user_path(current_user) %></li>
				    <li><%= link_to "View settings", user_path(current_user) %></li>
				    <li><%= link_to "Edit settings", edit_user_registration_path(current_user) %></li>
				    <li role="presentation" class="divider"></li>
				    <li><%= link_to destroy_user_session_path, method: :delete do%>Sign out<% end %></li>
				  </ul>
				</div>
			</div>
			<% else %>
			<div class="container">
				<div id="nav-brand" class="navbar-text navbar-left">
					<%= link_to "Slambook", root_path %>
				</div>
				<div class="navbar-right navbar-text brand-font">
					<span><%= link_to "Log In", new_user_session_path %></span>
					<span><%= link_to "Sign Up", new_user_registration_path %></span>
				</div>
			</div>
			<% end %>
		</nav>
	</header>
	<div class="content">
		<% if notice || alert %>
		<div class="container alert alert-info alert-dismissable in fade">
			<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<p><%= notice || alert %></p>
		</div>
		<% end %>

		<%= yield %>
	</div> <!--content div-->
	<footer class="text-center">
		<i class="glyphicon glyphicon-heart margin-right"></i>Built gleefully by <a href="http://www.gianthatworks.com" target="_blank" class="pink-hover">GiantHat</a><i class="glyphicon glyphicon-heart margin-left"></i>
	</footer>
</body>
</html>