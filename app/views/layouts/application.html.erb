<!DOCTYPE html>
<html>
<head>
  <title>Slambook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Knewave|Waiting+for+the+Sunrise|Gloria+Hallelujah|Indie+Flower' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>  
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>-page">
	<header>
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<% if current_user %>
			<div class="container">
				<div id="nav-brand" class="navbar-text navbar-left">
					<%= link_to "Slambook", homeroom_user_path(current_user) %>
				</div>
				<div class="navbar-right navbar-text">
					<span>Yo <%=current_user.first_name%>!</span>
					<span><%= link_to "Account", user_path(current_user) %></span>
					<span><%= link_to destroy_user_session_path, method: :delete do%>Sign out<% end %></span>
				</div>
			</div>
			<% else %>
			<div class="container">
				<div class="navbar-left">
					<%= link_to "Slambook", root_path %>
				</div>
				<div class="navbar-right navbar-text">
					<span><%= link_to "Log In", new_user_session_path %></span>
					<span><%= link_to "Sign Up", new_user_registration_path %></span>
				</div>
			</div>
			<% end %>
		</nav>
	</header>
	<div class="content">
		<% if notice || alert %>
		<div class="container alert alert-info alert-dismissable in fade">
			<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<p><%= notice || alert %></p>
		</div>
		<% end %>

		<%= yield %>
	</div> <!--content div-->
</body>
</html>