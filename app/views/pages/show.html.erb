<div class="container page-container">

	<h1 class="text-center"><%= @page.title %></h1>

	<div class="entries">
		<% @page.entries.each do |entry| %>
				<% if entry.user == current_user %>
					<p class="<%= entry.user.pen_color %>-text deleteable-entry">
						<%= entry.display_text %>
						<%= link_to entry_path(entry), data: { confirm: "You really want to delete your entry?" }, method: :delete, class: "pink-hover margin-left" do %>
			            	<i class="glyphicon glyphicon-trash"></i>
			        	<% end %>
		        	</p>
		        <% else %>
		        	<p class="<%= entry.user.pen_color %>-text">
						<%= entry.display_text %>
		        	</p>
	        	<% end %>
		<% end %>
	</div>

	<%= render "entries/form" %>

	<div class="pull-left arrow">
		<% unless @previous_page == nil %>
			<%= link_to page_path(@previous_page) do %>
				<%= image_tag "arrow-back.png" %>
			<% end %>
		<% else %>
			<%= link_to slambook_path(@page.slambook) do %>
				<%= image_tag "arrow-back.png" %>
			<% end %>
		<% end %>
	</div>

	<div class="pull-right arrow">
		<% unless @next_page == nil %>
			<%= link_to page_path(@next_page) do %>
				<%= image_tag "arrow-next.png" %>
			<% end %>
		<% else %>
			<%= link_to new_page_path(slambook_id: @page.slambook.id) do %>
				<%= image_tag "arrow-next.png" %>
			<% end %>
		<% end %>
	</div>

	<div id="entries-react-placeholder"></div>

	<%= react_component("Comment", {author: "Kathy", comment: "My girl wants to party all the time"}) %>

</div><!--end container page-container-->

