<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_type, :value => "question" %>

  <%= f.hidden_field :slambook_id, :value => @slambook.id %>

  <div class="form-group">
    <%= f.text_area :title, placeholder: "What do you want to ask?", rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= link_to "No thanks", slambook_path(@slambook), class: "btn btn-default margin-right"%>
    <%= f.submit "Make page", class: "btn btn-primary" %>
  </div>
<% end %>
